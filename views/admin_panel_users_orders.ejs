<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <% if(locals.users){ %>
        <title>Lista użytkowników</title>
    <% }else{ %>
        <title>Lista zamówień</title>
    <% } %>

    <link href="https://fonts.googleapis.com/css2?family=Libre+Caslon+Text:wght@400;700&family=Merienda:wght@400;700&family=Tenor+Sans&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/global.css">
    <link rel="stylesheet" href="/stylesheets/cart.css">
    <link rel="stylesheet" href="/stylesheets/admin_panel_products.css">
    <link rel="stylesheet" href="/stylesheets/admin_panel_users.css">
    <script src="/scripts/backToPanelButton.js" defer></script>
</head>
<body>
    <% if(locals.users){ %>
        <h1>Użytkownicy</h1>
    <% }else{ %>
        <h1>Zamówienia</h1>
    <% } %>
    <div class="container">
        <div class="cart-content">
            <div class="table-desc fst">
                <% if(locals.users){ %>
                    <div class="elem-name-fst">Id</div>
                    <div class="elem-name-fst">Nazwa</div>
                    <div class="elem-desc-fst email">E-mail</div>
                <% }else{ %>
                    <div class="elem-name-fst">OrderId</div>
                    <div class="elem-desc-fst">UserId</div>
                    <div class="elem-desc-fst order-date">Data Złożenia</div>
                    <div class="elem-desc-fst">Status</div>
                <% } %>
            </div>
            <% if(locals.data && locals.users){ %>
            <% locals.data.forEach(element => {%>
                <div class="cart-item">
                    <div class="elem-name"><%= element.userID %></div>
                    <div class="elem-desc"><%= element.username %></div>
                    <div class="elem-desc email"><%= element.email %></div>
                </div>
            <% }); %>
            <% }else if(locals.data){ %>
                <% locals.data.forEach(element => {%>
                    <div class="cart-item">
                        <div class="elem-name"><%= element.orderID %></div>
                        <div class="elem-desc"><%= element.userID %></div>
                        <div class="elem-desc order-date"><%= element.orderDate %></div>
                        <div class="elem-desc"><%= element.orderStatus %></div>
                    </div>
                <% }); %>    
            <% } %>
        </div>
        <button class="go-back-button">Wróć</button>
    </div>  
</body>
</html>