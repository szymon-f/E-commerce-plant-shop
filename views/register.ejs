<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="stylesheets/register.css">
    <link rel="stylesheet" href="stylesheets/global.css">
    <title>Zarejestruj się</title>
</head>
<body>
    <div class="registration-container">

        <%  for (const [key, value] of Object.entries(locals.messages)) { %>
            <div class="custom-alert">
                <strong><%= key %></strong> <%= value %>
              </div>
        <% } %>
        <div class="form-container">
        <form action="#" method="post" class="form-form">
            <h1>Zarejestruj się</h1>

            <input class="form-input" type="text" id="username" name="username" placeholder="nazwa użytkownika" required>
            
            <input class="form-input" type="email" id="email" name="email" placeholder="email" required>
            
            <input class="form-input" type="password" id="password" name="password" placeholder="hasło" required>

            <input class="form-input" type="password" id="confirm-password" name="confirm-password" placeholder="potwierdź hasło" required>
            
            <button class="form-button register-button" type="submit">Zarejestruj się</button>
        </form>
        </div>
    </div>
</body>
</html>
